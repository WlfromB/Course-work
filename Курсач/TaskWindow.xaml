<Window x:Class="Курсач.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсач"
        mc:Ignorable="d"
        
        Title="" Height="150" Width="450">
    
    <Grid x:Name="gridTaskWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name ="col1" Width="*"/>
            <ColumnDefinition x:Name ="col2" Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Grid.Column="1" Content="Ok" Click="btn_Ok" Margin="45" Style="{StaticResource btnBorder}"/>
    </Grid>
</Window>
