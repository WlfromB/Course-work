<Window x:Class="Курсач.ConflictResolverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсач"
        mc:Ignorable="d"
        Title="ConflictResolverWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="conflictInfoLabel"
               Grid.Row="0"/>
        
        <ComboBox x:Name="selectorScript" 
                  DisplayMemberPath="Name"
                  Grid.Row="1"/>

        <Button x:Name="select" 
                Grid.Row="2"
                Margin="20"
                Content="Выбрать вариант"
                Style="{StaticResource btnBorder}"
                Click="select_Click"/>
        

    </Grid>
</Window>
